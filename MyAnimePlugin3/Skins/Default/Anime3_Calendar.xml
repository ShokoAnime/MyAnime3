<window>
  <id>6108</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <define>#title.color:ffffffff</define>
  <!-- Titles Color     Default: ffdedede-->
  <define>#smalltitle.color:ffffffff</define>
  <!-- Small Titles Color     Default: ff999999 -->
  <define>#text.color:ffffffff</define>
  <!-- Text Color     Default: ffffffff-->
  <define>#default.color:ffffffff</define>
  <!-- Normal List Color     Default: ffffffff-->
  <define>#watched.color:ffffffff</define>
  <!-- Watched List Color     Default: ff666666 -->
  <define>#notpresent.color:ffffffff</define>
  <!-- File Not Present in List Color     Default: ffef6d16 -->

  <controls>

	<!-- ********************** DUMMY CONTROLS FOR VISIBILITY ************************************** -->

	<control>
	  <type>label</type>
	  <description>Do any anime exist for the current month</description>
	  <id>1401</id>
	  <posX>-50</posX>
	  <posY>-50</posY>
	  <width>5</width>
	  <label></label>
	  <visible>false</visible>
	</control>

	<!-- ********************** BACKGROUNDS************************************** -->

	<control>
		<id>0</id>
		<description>FanArt Overlay</description>
		<type>image</type>
		<posX>0</posX>
		<posY>0</posY>
		<width>720</width>
		<height>576</height>
		<texture>Backgroundtop.png</texture>
	</control>

	<!-- :::::::::::::::::::::::::::::: TOP BAR :: TIME :: LOCATION :::::::::::::::::::::::::::::: -->

	<control>
	  <description>Top title</description>
	  <type>label</type>
	  <id>0</id>
	  <posX>20</posX>
		<posY>15</posY>
	  <font>font18</font>
	  <textcolor>ffa9d0f7</textcolor>
	  <width>660</width>
	  <label>Calendar</label>
	</control>

	<!--  ************** Facade *****************  -->

	<control>
	  <description>composite control</description>
	  <type>facadeview</type>
	  <id>50</id>

	  <control>
		<description>Filmstrip view (used for season posters)</description>
		<type>filmstrip</type>
		<scrollOffset>2</scrollOffset>
		<id>50</id>
		<onup>84</onup>
		<ondown>50</ondown>
		<onleft>50</onleft>
		<posX>20</posX>
		<posY>120</posY>
		<width>680</width>
		<spinPosY>600</spinPosY>
		<spinPosX>500</spinPosX>
		<spinWidth>30</spinWidth>
		<spinHeight>30</spinHeight>
		<spinColor>ffcccccc</spinColor>
		<itemWidth>133</itemWidth>
		<itemHeight>195</itemHeight>
		<textureWidth>149</textureWidth>
		<textureHeight>214</textureHeight>
		<thumbWidth>120</thumbWidth>
		<thumbHeight>185</thumbHeight>
		<thumbPosX>13</thumbPosX>
		<thumbPosY>11</thumbPosY>
		<thumbs flipY="true" diffuse="diffusemirrorwide.png"></thumbs>
		<InfoImage flipY="true" diffuse="diffusemirrorwide.png"></InfoImage>
		<imageFolderFocus>-</imageFolderFocus>
		<frame>-</frame>
		<frameFocus>-</frameFocus>
		<background>dvd_frame.png</background>
		<showFrame>yes</showFrame>
		<showFolder>no</showFolder>
		<showBackGround>no</showBackGround>
		<showInfoImage>no</showInfoImage>
		<spinCanFocus>no</spinCanFocus>
		<thumbAnimation effect="zoom" start="100,100" end="120,120" time="100">focus</thumbAnimation>
	  </control>

	 

	</control>


	<!--  ************** HIDDEN MENU *****************  -->

		<control>
			<type>actiongroup</type>
			<description>action menu</description>
			<defaultcontrol>920</defaultcontrol>
			<onexit>50</onexit>
			<buttonX>0</buttonX>
			<buttonY>0</buttonY>
			<buttonwidth>60</buttonwidth>
			<buttonheight>576</buttonheight>
			<textureFocus>-</textureFocus>
			<textureNoFocus>-</textureNoFocus>
			<width>320</width>
			<height>700</height>
			<dimColor>00ffffff</dimColor>
			<control>
				<type>image</type>
				<posX>15</posX>
				<posY>63</posY>
				<width>263</width>
				<height>473</height>
				<texture>Backslide.png</texture>
				<colorDiffuse>fffffffff</colorDiffuse>
				<visible>!Control.HasFocus(50)</visible>
				<animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
				<animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
			</control>
			<control>
				<id>0</id>
				<label>OTHER</label>
				<type>label</type>
				<font>font12</font>
				<posX>30</posX>
				<posY>90</posY>
				<visible>!Control.HasFocus(50)</visible>
				<animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
				<animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
			</control>
			
			<control>
				<description>button group</description>
				<type>group</type>
				<animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
				<animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
				<posX>40</posX>
				<posY>110</posY>
				<layout>StackLayout</layout>
				<visible>!Control.HasFocus(50)</visible>
				<control>
					<description>Continue Watching...</description>
					<width>200</width>
					<type>button</type>
					<id>920</id>
					<label>Continue Watching...</label>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>926</onup>
					<ondown>921</ondown>
				</control>
			
			<control>
				<description>Utilities</description>
				<width>200</width>
				<type>button</type>
				<id>921</id>
				<label>Utilities</label>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>920</onup>
				<ondown>923</ondown>
			</control>
			
			<control>
				<description>Downloads</description>
				<width>200</width>
				<type>button</type>
				<id>923</id>
				<label>Downloads</label>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>921</onup>
				<ondown>925</ondown>
			</control>
			<control>
				<description>Recommendations</description>
				<width>200</width>
				<type>button</type>
				<id>925</id>
				<label>Recommendations</label>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>923</onup>
				<ondown>926</ondown>
			</control>
			<control>
				<description>Something Random</description>
				<width>200</width>
				<type>button</type>
				<id>926</id>
				<label>Something Random</label>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>925</onup>
				<ondown>920</ondown>
			</control>
			</control>
		</control>


	<!--  ************** BUTTONS TOOLBAR *****************  -->

	<control>
	  <description>Middle</description>
	  <type>button</type>
	  <id>83</id>
	  <label>#Anime3.Calendar.MinusOneMonth #Anime3.Calendar.MinusOneYear</label>
	  <width>90</width>
	  <posX>220</posX>
	  <posY>60</posY>
	  <onleft>920</onleft>
	  <onright>84</onright>
	  <align>center</align>
	  <ondown>50</ondown>
	  <onup>50</onup>
	</control>

	<control>
	  <description>Curent Month</description>
	  <type>label</type>
	  <id>0</id>
	  <posX>0</posX>
	  <width>720</width>
	  <posY>75</posY>
	  <font>font16</font>
	  <textcolor>ffffffff</textcolor>
	  <label>#Anime3.Calendar.CurrentMonth #Anime3.Calendar.CurrentYear</label>
	  <align>center</align>
	</control>

	<control>
	  <description>Curent Month</description>
	  <type>label</type>
	  <id>0</id>
	  <posX>0</posX>
	  <width>720</width>
	  <posY>250</posY>
	  <font>font14</font>
	  <textcolor>ffffffff</textcolor>
	  <label>Nothing found for #Anime3.Calendar.CurrentMonth #Anime3.Calendar.CurrentYear</label>
	  <align>center</align>
	  <visible>!Control.IsVisible(1401)</visible>
	</control>

	<control>
	  <description>Middle</description>
	  <type>button</type>
	  <id>84</id>
	  <label>#Anime3.Calendar.PlusOneMonth #Anime3.Calendar.PlusOneYear</label>
	  <width>90</width>
	  <posX>420</posX>
	  <posY>60</posY>
	  <onleft>83</onleft>
	  <onright>920</onright>
	  <align>center</align>
	  <ondown>50</ondown>
	  <onup>50</onup>
	</control>

	<!--  ************** SELECTED SERIES *****************  -->

	<control>
	  <description>Series Title</description>
	  <type>fadelabel</type>
	  <id>0</id>
	  <id>0</id>
	  <posX>20</posX>
	  <posY>360</posY>
	  <width>680</width>
	  <height>100</height>
	  <font>font18</font>
	  <textcolor>ffffffff</textcolor>
	  <label>#Anime3.Calendar.Title</label>
	  <visible>Control.IsVisible(1401)</visible>
	</control>

	<control>
	  <description>Summary</description>
	  <type>textboxscrollup</type>
	  <id>0</id>
	  <posX>270</posX>
	  <posY>400</posY>
	  <width>430</width>
	  <height>135</height>
	  <textcolor>ffFFFFFF</textcolor>
	  <seperator>-----------------------------------------------------------------------------------</seperator>
	  <visible>Control.IsVisible(1401)</visible>
	  <label>#Anime3.Calendar.Description</label>
	</control>

	<control>
	  <type>label</type>
	  <label>AIR DATE</label>
	  <posX>20</posX>
	  <posY>400</posY>
	  <textcolor>ffa9d0f7</textcolor>
	  <visible>Control.IsVisible(1401)</visible>
	</control>
	<control>
	  <type>label</type>
	  <label>#Anime3.Calendar.AirDate</label>
	  <posX>100</posX>
	  <posY>400</posY>
	  <visible>Control.IsVisible(1401)</visible>
	</control>

	<control>
	  <type>label</type>
	  <label>Categories</label>
	  <posX>20</posX>
	  <posY>430</posY>
	  <textcolor>ffa9d0f7</textcolor>
	  <visible>Control.IsVisible(1401)</visible>
	  <height>120</height>
	</control>
	<control>
	  <type>textbox</type>
	  <label>#Anime3.Calendar.Genre</label>
	  <posX>20</posX>
	  <posY>450</posY>
	  <width>200</width>
	  <visible>Control.IsVisible(1401)</visible>
	  <height>135</height>
	</control>


	<import>common.time.xml</import>

  </controls>
</window>
