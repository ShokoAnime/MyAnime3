			<id>0</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1280</width>
			<height>720</height>
			<texture>MyAnime3/mainoverlay2.png</texture>
		</control>

	  <!-- ************************** TOP BAR ***********************************-->

	  <control>
		<type>image</type>
		<id>0</id>
		<posX>10</posX>
		<posY>5</posY>
		<width>34</width>
		<height>40</height>
		<texture>hover_My Anime3.png</texture>
		<visible>true</visible>
	  </control>

	  <control>
		<type>label</type>
		<description>Characters</description>
		<id>0</id>
		<posX>60</posX>
		<posY>10</posY>
		<width>900</width>
		<align>left</align>
		<font>font13</font>
		<textcolor>ffFFFFFF</textcolor>
		<label>Characters</label>
	  </control>
	  
	  <control>
      <type>label</type>
      <description>Series Title</description>
      <id>0</id>
      <posX>230</posX>
      <posY>10</posY>
      <width>700</width>
      <font>font13</font>
      <label>#Anime3.Character.Main.Title</label>
      <align>left</align>
    </control>

	  <control>
		<description>Date Time</description>
		<type>label</type>
		<id>0</id>
		<posX>1260</posX>
		<posY>10</posY>
		<label>#date / #time</label>
		<align>right</align>
		<font>font12</font>
		<textcolor>ffa9d0f7</textcolor>
		<animation effect="fade" time="250">WindowClose</animation>
	  </control>
	  
	  <control>
      <description>No characters found</description>
      <type>label</type>
      <id>0</id>
      <posX>28</posX>
      <posX>400</posX>
      <width>450</width>
      <posY>250</posY>
      <font>font14</font>
      <textcolor>ffffffff</textcolor>
      <label>No characters found for #Anime3.Character.Main.Title</label>
	  <visible>!Control.IsVisible(1301)</visible>
      <align>center</align>
    </control>

	  <!-- :::::::::::::::::::::::::::::: FACADE :::::::::::::::::::::::::::::: -->

		<control>
			<description>composite control</description>
			<type>facadeview</type>
			<id>50</id>

			<control>
				<description>Filmstrip view</description>
				<type>filmstrip</type>
				<id>50</id>
				<onup>2</onup>
				<ondown>50</ondown>
				<onleft>50</onleft>
				<onright>50</onright>
				<posX>30</posX>
				<posY>70</posY>
				<width>1250</width>
				
				<thumbWidth>170</thumbWidth>
				<thumbHeight>250</thumbHeight>					
				<itemWidth>172</itemWidth>
				<itemHeight>252</itemHeight>				
				<scrollOffset>3</scrollOffset>					
				<showFolder>no</showFolder>
				<showBackGround>no</showBackGround>
				<spinWidth>30</spinWidth>
				<spinHeight>30</spinHeight>
				<spinPosX>1382</spinPosX>
				<spinPosY>670</spinPosY>
				<thumbs flipY="true" diffuse="Thumb_Mask.png"></thumbs>
				<thumbAnimation effect="zoom" start="100,100" end="130,130" time="200">focus</thumbAnimation>
				<thumbAnimation effect="zoom" start="130,130" end="100,100" time="200">unfocus</thumbAnimation>	
			</control>

		</control>

		<!--  ************** HIDDEN MENU *****************  -->

	<control>
	  <type>actiongroup</type>
	  <description>action menu</description>
	  <defaultcontrol>2</defaultcontrol>
	  <onexit>50</onexit>
	  <buttonX>0</buttonX>
	  <buttonY>0</buttonY>
	  <buttonwidth>106</buttonwidth>
	  <buttonheight>720</buttonheight>
	  <textureFocus>-</textureFocus>
	  <textureNoFocus>-</textureNoFocus>
	  <width>568</width>
	  <height>900</height>
	  <dimColor>00ffffff</dimColor>
	  <control>
		<type>image</type>
		<posX>26</posX>
		<posY>78</posY>
		<width>367</width>
		<height>591</height>
		<texture>Backslide.png</texture>
		<colorDiffuse>fffffffff</colorDiffuse>
		<visible>!Control.HasFocus(801)+!Control.HasFocus(802)</visible>
		<animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
		<animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
	  </control>
	  <control>
			<id>0</id>
			<label>MENU</label>
			<type>label</type>
			<font>font12</font>
			<posX>71</posX>
			<posY>120</posY>
			<visible>!Control.HasFocus(801)+!Control.HasFocus(802)</visible>
			<animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
			<animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
		</control>
		<control>
			<id>0</id>
			<label>OTHER</label>
			<type>label</type>
			<font>font12</font>
			<posX>71</posX>
			<posY>250</posY>
			<visible>!Control.HasFocus(801)+!Control.HasFocus(802)</visible>
			<animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
			<animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
		</control>
	  <control>
		<description>group element</description>
		<type>group</type>
		<animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
		<animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
		<visible>!Control.HasFocus(801)+!Control.HasFocus(802)</visible>
		<control>
		  <description>button group</description>
		  <type>group</type>
		  <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
		  <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
		  <posX>71</posX>
		  <posY>150</posY>
		  <layout>StackLayout</layout>
		  <visible>!Control.HasFocus(801)+!Control.HasFocus(802)</visible>
		  <control>
					<description>Get Missing Info</description>
					<type>button</type>
					<id>2</id>
					<label>Get Missing Info</label>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>915</onup>
					<ondown>3</ondown>
				</control>
				<control>
					<description>Refresh View</description>
					<type>button</type>
					<id>3</id>
					<label>Refresh View</label>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>2</onup>
					<ondown>910</ondown>
				</control>
				<control>
					<description>Empty button</description>
					<type>button</type>
					<id>0</id>
					<label>-</label>
					<visible>false</visible>
				</control>
				
				<control>
					<description>Series Info</description>
					<type>button</type>
					<id>910</id>
					<label>Series Info</label>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>3</onup>
					<ondown>912</ondown>
				</control>
				<control>
					<description>Relations</description>
					<type>button</type>
					<id>912</id>
					<label>Relations</label>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>910</onup>
					<ondown>913</ondown>
				</control>
				<control>
					<description>Fanart</description>
					<type>button</type>
					<id>913</id>
					<label>Fanart</label>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>912</onup>
					<ondown>914</ondown>
				</control>
				<control>
					<description>Posters</description>
					<type>button</type>
					<id>914</id>
					<label>Posters</label>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>913</onup>
					<ondown>915</ondown>
				</control>
				<control>
					<description>Wide Banners</description>
					<type>button</type>
					<id>915</id>
					<label>Wide Banners</label>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>914</onup>
					<ondown>2</ondown>
				</control>
		</control>
	  </control>
	</control>
		
