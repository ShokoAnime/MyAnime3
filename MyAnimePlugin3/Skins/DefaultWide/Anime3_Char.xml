<window>
	<id>6105</id>
	<defaultcontrol>902</defaultcontrol>
	<allowoverlay>no</allowoverlay>

	<controls>

	  <!-- Import Dummy Controls to handle visibility -->

	   <!-- Dummies -->
    <control>
	  <type>label</type>
