<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <controls>
	<control>
	  	<description>background listview for filters, groups, series, episode types</description>
	  	<type>image</type>
	  	<id>1</id>
	  	<posX>0</posX>
	  	<posY>0</posY>
	  	<width>1920</width>
	  	<height>1080</height>
	  	<texture>overlay_long.png</texture>
	  	<visible>facadeview.list|facadeview.largeicons</visible>
	</control>

	<control>
	  	<description>Viewport List with posters</description>
	  	<type>image</type>
	  	<id>1</id>
	  	<posX>1</posX>
		<posY>87</posY>
		<width>1893</width>
		<height>807</height>
		<texture>viewport_long.png</texture>
	  	<visible>[ !control.isvisible(1232) + [!control.isvisible(1239)+!control.isvisible(1250)] ]+facadeview.list|facadeview.largeicons</visible>
	  	<animation effect="fade" time="250">WindowOpen</animation>
	  	<animation effect="fade" time="250">WindowClose</animation>
	  	<animation effect="slide" time="250" start="-1890,0">WindowOpen</animation>
	  	<animation effect="slide" time="250" end="-1890,0">WindowClose</animation>
	</control>

<control>
	  	<description>Viewport Main Background</description>
	  	<type>image</type>
	  	<id>1</id>
	  	<posX>1</posX>
	  	<posY>92</posY>
	  	<width>1893</width>
	  	<height>795</height>
	  	<texture>viewport_basichome.png</texture>
	  	<visible>[ [control.isvisible(1250)]]+facadeview.list|facadeview.largeicons</visible>
	  	<animation effect="fade" time="250">WindowOpen</animation>
	  	<animation effect="fade" time="250">WindowClose</animation>
	  	<animation effect="slide" time="250" start="-1890,0">WindowOpen</animation>
	  	<animation effect="slide" time="250" end="-1890,0">WindowClose</animation>
	</control>

	<control>
	  	<description>Viewport List with fanart </description>
	  	<type>image</type>
	  	<id>1</id>
	  	<posX>1</posX>
	  	<posY>92</posY>
	  	<width>1893</width>
	  	<height>795</height>
	  	<texture>viewport_long.png</texture>
	  	<visible>[ control.isvisible(1239) | [[control.isvisible(1237)|control.isvisible(1238)|control.isvisible(1240)]+control.isvisible(1232)] ]+facadeview.list|facadeview.largeicons</visible>
	  	<animation effect="fade" time="250">WindowOpen</animation>
	  	<animation effect="fade" time="250">WindowClose</animation>
	  	<animation effect="slide" time="250" start="-1890,0">WindowOpen</animation>
	  	<animation effect="slide" time="250" end="-1890,0">WindowClose</animation>
	</control>



	
	<control>
	  	<description>Background Filmstrip</description>
	  	<type>image</type>
	  	<id>1</id>
	  	<posX>0</posX>
	 	<posY>0</posY>
	  	<width>1920</width>
	  	<height>1080</height>
	  	<texture>filmstrip_fanart_overlay.png</texture>
	  	<visible>facadeview.filmstrip | facadeview.coverflow</visible>
	  	<animation effect="fade" time="0">WindowClose</animation>
	  	<shouldCache>true</shouldCache>
	</control>
  </controls>
</window>