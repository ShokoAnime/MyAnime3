<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
<controls>


	<!--            :: Series ::            -->

<control>
    <description>FanartHandler Series 1</description>
    <type>image</type>
    <id>0</id>
    <posX>0</posX>
    <posY>0</posY>
    <width>1920</width>
    <height>1080</height>
    <visible>Control.IsVisible(1201) + string.contains(#bgimage1,series)</visible>
    <animation effect="fade" start="100" end="0" time="450" delay="250" reversible="false">Hidden</animation>
    <animation effect="fade" start="30" end="100" time="450" reversible="false">Visible</animation>
    <texture>#fanarthandler.tvseries.backdrop1.any</texture>
</control>

