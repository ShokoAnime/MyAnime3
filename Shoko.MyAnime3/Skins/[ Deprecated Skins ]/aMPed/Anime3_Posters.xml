		</control>
        <control Style="Align Right">
			<description>Poster Source</description>
			<type>label</type>
			<id>0</id>
			<posY>530</posY>
			<width>700</width>
			<font>font14</font>
			<label>Source: #Anime3.Posters.SelectedSource</label>
			<align>right</align>
