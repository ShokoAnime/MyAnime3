					<textYOff>10</textYOff>
					<animation effect="fade" time="250">Focus</animation>
					<animation effect="fade" time="250">UnFocus</animation>
				</control>
				<control>
					<description>Filmstrip view</description>
					<type>filmstrip</type>
					<id>50</id>
					<posY>200</posY>
					<onup>2</onup>
					<ondown>2</ondown>
					<animation effect="fade" time="250">Focus</animation>
					<animation effect="fade" time="250">UnFocus</animation>
				</control>
			</control>
		</control>
