			<posY>530</posY>
			<width>700</width>
			<font>font14</font>
			<label>Is Default</label>
			<textcolor>ffa9d0f7</textcolor>
		</control>
		<control>
			<description>Is Default:</description>
			<type>label</type>
			<id>0</id>
			<posX>200</posX>
			<posY>530</posY>
			<width>700</width>
			<font>font14</font>
			<label>#Anime3.Posters.SelectedPosterIsDefault</label>
		</control>

		<!--  ************** HIDDEN MENU *****************  -->
		<control>
			<type>actiongroup</type>
			<description>action menu</description>
			<defaultcontrol>2</defaultcontrol>
			<onexit>50</onexit>
			<buttonX>0</buttonX>
			<buttonY>35</buttonY>
			<buttonwidth>45</buttonwidth>
			<buttonheight>576</buttonheight>
            <textureFocus>Action_focus.png</textureFocus>
            <textureNoFocus>Action_nofocus.png</textureNoFocus>
			<width>320</width>
			<height>576</height>
			<dimColor>ffffffff</dimColor>
			<control>
				<description>button group</description>
				<type>group</type>
				<animation effect="slide" time="450" start="-300,0">visible</animation>
				<animation effect="slide" time="450" end="-300,0">hidden</animation>
				<posX>20</posX>
				<posY>140</posY>
				<layout>StackLayout</layout>
				<visible>!Control.HasFocus(50)</visible>
				<control>
					<description>Change Layout</description>
					<type>button</type>
					<id>2</id>
					<label>Change Layout</label>
					<onup>141</onup>
					<ondown>140</ondown>
					<onleft>50</onleft>
					<onright>50</onright>
				</control>
				<control>
					<description>Fanart</description>
					<type>button</type>
					<id>140</id>
